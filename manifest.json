{
  "manifest_version": 2,

  "name": "TheNextEpisode",
  "description": "TheNextEpisode is your guide for whatever TV series you're watching online.",
  "version": "0.5",
  
   "browser_action": {     
      "default_icon": "fastforward.png",
      "default_popup": "popup.html"
	}, 
	
	"background": {
      "scripts": [ "dist/background-bundle.js" ],
      "persistent": false
	},
	
	"permissions": [
      "http://*.primewire.ag/",
      "storage"
	],
	
	"content_scripts": [
    {
      "matches": ["http://*.primewire.ag/*"],
      "js": [ "dist/content-bundle.js" ],
	  "css": ["css/1channel.css"],
	  "img": ["img/loader.gif"],
	  "run_at": "document_end"
    }],
	
	"web_accessible_resources": [
      "img/loader.gif"
	]
}